{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "rewrites": [
    { "source": "/", "destination": "/api/site/home" },

    { "source": "/demo",            "destination": "/api/site/home?route=demo&page=overview" },
    { "source": "/demo/",           "destination": "/api/site/home?route=demo&page=overview" },
    { "source": "/demo/tasks",      "destination": "/api/site/home?route=demo&page=tasks" },
    { "source": "/demo/habits",     "destination": "/api/site/home?route=demo&page=habits" },
    { "source": "/demo/journal",    "destination": "/api/site/home?route=demo&page=journal" },
    { "source": "/demo/review",     "destination": "/api/site/home?route=demo&page=review" },
    { "source": "/demo/agenda",     "destination": "/api/site/home?route=demo&page=agenda" },
    { "source": "/demo/settings",   "destination": "/api/site/home?route=demo&page=settings" },
    { "source": "/demo/calendar",   "destination": "/api/site/home?route=demo&page=agenda" },

    { "source": "/app",             "destination": "/index.html" },
    { "source": "/app/",            "destination": "/index.html" },
    { "source": "/app/capture",     "destination": "/index.html" },
    { "source": "/app/tasks",       "destination": "/index.html" },
    { "source": "/app/focus",       "destination": "/index.html" },
    { "source": "/app/agenda",      "destination": "/index.html" },
    { "source": "/app/habits",      "destination": "/index.html" },
    { "source": "/app/journal",     "destination": "/index.html" },
    { "source": "/app/review",      "destination": "/index.html" },
    { "source": "/app/settings",    "destination": "/index.html" },
    { "source": "/app/calendar",    "destination": "/index.html" },

    { "source": "/dashboard",       "destination": "/index.html" },
    { "source": "/app-dashboard",   "destination": "/index.html" },

    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}