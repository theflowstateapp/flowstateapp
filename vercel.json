{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "routes": [
    { "src": "^/$",                 "dest": "/api/site/home" },

    { "src": "^/demo$",             "dest": "/api/site/home?route=demo&page=overview" },
    { "src": "^/demo/$",            "dest": "/api/site/home?route=demo&page=overview" },
    { "src": "^/demo/tasks$",       "dest": "/api/site/home?route=demo&page=tasks" },
    { "src": "^/demo/habits$",      "dest": "/api/site/home?route=demo&page=habits" },
    { "src": "^/demo/journal$",     "dest": "/api/site/home?route=demo&page=journal" },
    { "src": "^/demo/review$",      "dest": "/api/site/home?route=demo&page=review" },
    { "src": "^/demo/agenda$",      "dest": "/api/site/home?route=demo&page=agenda" },
    { "src": "^/demo/settings$",    "dest": "/api/site/home?route=demo&page=settings" },

    { "src": "^/demo/calendar$",    "dest": "/api/site/home?route=demo&page=agenda" },

    { "src": "^/api/(.*)$",         "dest": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/api/demo/access",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/api/demo/exchange",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/api/demo/static",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index,follow"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        }
      ]
    },
    {
